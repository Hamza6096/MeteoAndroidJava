<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <TextView
        android:id="@+id/obs_city"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:textSize="25sp"
        android:padding="20dp"
        />

    <TextView
        android:id="@+id/obs_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:textSize="35sp"
        android:padding="20dp"
        />

    <TextView
        android:id="@+id/obs_temp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:textSize="35sp"
        android:padding="20dp"
        />

    <TextView
        android:id="@+id/obs_wind"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:textSize="25sp"
        app:drawableLeftCompat="@drawable/ic_baseline_air_24"
        android:padding="20dp"
        />

    <TextView
        android:id="@+id/obs_humidity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:textSize="25sp"
        app:drawableLeftCompat="@drawable/ic_baseline_humidity_24"
        android:padding="20dp"
        />

</LinearLayout>
